<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.theme.firstPage.BlankFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="50dp"
        android:allowUndo="false"
        android:text="ANALYTICS"
        android:textColor="#000000"
        android:textSize="32sp"
        android:textStyle="bold" />

    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/pieChartOutcome"
        android:layout_width="280dp"
        android:layout_height="280dp"
        android:layout_marginTop="90dp"
        android:layout_marginBottom="40dp"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textViewOutcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pieChartIncome"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-330dp"
        android:text="Outcome"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold" />

    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/pieChartIncome"
        android:layout_width="280dp"
        android:layout_height="280dp"
        android:layout_below="@id/pieChartOutcome"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="4dp"
        android:layout_centerHorizontal="true" />
    <TextView
        android:id="@+id/textViewIncome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/pieChartIncome"
        android:layout_centerHorizontal="true"
        android:text="Income"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/textViewRent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:layout_weight="1"
        android:drawableLeft="@drawable/ic_circle"
        android:drawableTint="@color/purple_200"
        android:drawablePadding="-50dp"
        android:gravity="center"
        android:padding="4dp"
        android:text="Rent"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:layout_below="@id/pieChartIncome"
        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/textViewCar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:layout_marginStart="3dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="3dp"
        android:layout_marginBottom="3dp"
        android:layout_weight="1"
        android:drawableLeft="@drawable/ic_circle"
        android:drawableTint="@color/yellow"
        android:drawablePadding="-50dp"
        android:gravity="center"
        android:padding="4dp"
        android:text="Car"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:layout_below="@id/pieChartIncome"
        android:layout_toEndOf="@id/textViewRent" />
a
    <TextView
        android:id="@+id/textViewFood"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:layout_weight="1"
        android:drawableLeft="@drawable/ic_circle"
        android:drawableTint="@color/red"
        android:drawablePadding="-50dp"
        android:gravity="center"
        android:padding="4dp"
        android:text="Food"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:layout_below="@id/pieChartIncome"
        android:layout_toEndOf="@id/textViewCar" />

</RelativeLayout>
