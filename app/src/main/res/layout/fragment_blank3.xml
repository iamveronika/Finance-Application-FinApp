<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.theme.thirdPage.BlankFragment3">

    <TextView
        android:id="@+id/textView"
        android:layout_width="68dp"
        android:layout_height="46dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="50dp"
        android:text="ADD"
        android:textColor="#000000"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/variableEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:textColor="#25383C"
        android:textSize="20dp"
        android:fontStyle="italic"
        android:text=""
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView" />


    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/buttons_view"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/variableEditText"
        android:stretchColumns="*"
        > <!-- collapse the first column of the table row-->

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:padding="18dip"
                android:text="1"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:padding="18dip"
                android:text="2"/>
            <Button
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:padding="18dip"
                android:text="3"/>
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:padding="18dip"
                android:text="4"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:padding="18dip"
                android:text="5"/>
            <Button
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:padding="18dip"
                android:text="6"/>
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:padding="18dip"
                android:text="7"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:padding="18dip"
                android:text="8"/>
            <Button
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:padding="18dip"
                android:text="9"/>
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/point"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:padding="18dip"
                android:text="."/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:padding="18dip"
                android:text="0"/>
            <Button
                android:id="@+id/clear"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:padding="18dip"
                android:text="-"/>
        </TableRow>
    </TableLayout>

    <Button
        android:id="@+id/applyButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Apply"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/buttons_view" />


    <RadioGroup
        android:id="@+id/transactionTypeRadioGroup"
        android:layout_width="334dp"
        android:layout_height="29dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="584dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RadioButton
            android:id="@+id/incomeRadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="130dp"
            android:fontStyle="normal"
            android:text="Income"
            android:textColor="#25383C" />

        <RadioButton
            android:id="@+id/outcomeRadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontStyle="normal"
            android:text="Outcome"
            android:textColor="#25383C" />

    </RadioGroup>

</androidx.constraintlayout.widget.ConstraintLayout>